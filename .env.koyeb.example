# Environment
ENV=production
DEBUG=0

# Django
SECRET_KEY=your-secret-key-here
DATABASE_URL=postgresql://user:password@host:port/database

# CORS and Security
ALLOWED_HOSTS=your-app.koyeb.app
CSRF_TRUSTED_ORIGINS=https://your-app.koyeb.app
SITE_ID=1
# Optional but recommended for deterministic Site configuration
SITE_DOMAIN=your-app.koyeb.app

# Cloudflare R2 Storage
AWS_ACCESS_KEY_ID=your-r2-access-key
AWS_SECRET_ACCESS_KEY=your-r2-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
AWS_S3_REGION_NAME=auto
AWS_S3_ADDRESSING_STYLE=virtual

# Google OAuth2 (required for Google login)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
# If not set, settings.py will derive it from ALLOWED_HOSTS (https://<host>/accounts/google/login/callback/)
# You can also set it explicitly if needed:
# GOOGLE_REDIRECT_URI=https://your-app.koyeb.app/accounts/google/login/callback/
# Optionally restrict to a Google Workspace domain
# GOOGLE_HOSTED_DOMAIN=
